import java.util.Arrays;

public class Tienda {
    // Matriz para almacenar las ventas de cada departamento por mes (3 departamentos x 12 meses)
    private double[][] ventas = new double[3][12];
    private String[] departamentos = {"Ropa", "Deportes", "Juguetería"};

    // Método para insertar ventas de un departamento en un mes
    public void insertarVentas(String departamento, int mes, double venta) {
        int index = Arrays.asList(departamentos).indexOf(departamento);
        if (index != -1 && mes >= 1 && mes <= 12) {
            ventas[index][mes - 1] = venta;
        } else {
            System.out.println("Departamento o mes inválido.");
        }
    }

    // Método para buscar las ventas de un departamento en un mes
    public double buscarVenta(String departamento, int mes) {
        int index = Arrays.asList(departamentos).indexOf(departamento);
        if (index != -1 && mes >= 1 && mes <= 12) {
            return ventas[index][mes - 1];
        } else {
            System.out.println("Departamento o mes inválido.");
            return -1;
        }
    }

    // Método para eliminar las ventas de un departamento en un mes (poniendo a 0)
    public void eliminarVenta(String departamento, int mes) {
        int index = Arrays.asList(departamentos).indexOf(departamento);
        if (index != -1 && mes >= 1 && mes <= 12) {
            ventas[index][mes - 1] = 0;
        } else {
            System.out.println("Departamento o mes inválido.");
        }
    }

    // Método para imprimir todas las ventas
    public void mostrarVentas() {
        for (int i = 0; i < departamentos.length; i++) {
            System.out.println(departamentos[i] + ": " + Arrays.toString(ventas[i]));
        }
    }

    public static void main(String[] args) {
        Tienda tienda = new Tienda();
        
        // Insertar ventas
        tienda.insertarVentas("Ropa", 1, 5000.0);
        tienda.insertarVentas("Deportes", 2, 7000.0);
        tienda.insertarVentas("Juguetería", 3, 3000.0);
        
        // Buscar ventas
        System.out.println("Ventas de Ropa en enero: " + tienda.buscarVenta("Ropa", 1));
        
        // Eliminar ventas
        tienda.eliminarVenta("Deportes", 2);
        
        // Mostrar todas las ventas
        tienda.mostrarVentas();
    }
}
